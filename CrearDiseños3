  <script>
    // Mobile menu
    document.getElementById('btnMenu').addEventListener('click', function(){
      const m = document.getElementById('menuMobile');
      m.classList.toggle('hidden');
    });

    // Billing toggle (demo only)
    const monthlyBtn = document.getElementById('billingMonthly');
    const yearlyBtn = document.getElementById('billingYearly');
    const pricePro = document.getElementById('pricePro');
    const priceTeams = document.getElementById('priceTeams');

    monthlyBtn.addEventListener('click', () => {
      monthlyBtn.classList.add('font-semibold');
      yearlyBtn.classList.remove('font-semibold');
      pricePro.innerHTML = '$12<span class="text-base font-medium">/mes</span>';
      priceTeams.innerHTML = '$29<span class="text-base font-medium">/usuario</span>';
    });

    yearlyBtn.addEventListener('click', () => {
      yearlyBtn.classList.add('font-semibold');
      monthlyBtn.classList.remove('font-semibold');
      pricePro.innerHTML = '$99<span class="text-base font-medium">/año</span>';
      priceTeams.innerHTML = '$279<span class="text-base font-medium">/usuario</span>';
    });
  </script>
